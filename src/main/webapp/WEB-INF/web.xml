<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.chen.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.chen.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginPageServlet</servlet-name>
        <servlet-class>com.chen.controller.LoginPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginPageServlet</servlet-name>
        <url-pattern>/loginPage.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>indexPageServlet</servlet-name>
        <servlet-class>com.chen.controller.IndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexPageServlet</servlet-name>
        <url-pattern>/indexPage.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updatePage</servlet-name>
        <servlet-class>com.chen.controller.UpdatePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatePage</servlet-name>
        <url-pattern>/updatePage.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateStudent</servlet-name>
        <servlet-class>com.chen.controller.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateStudent</servlet-name>
        <url-pattern>/updateStudent.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteStudent</servlet-name>
        <servlet-class>com.chen.controller.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteStudent</servlet-name>
        <url-pattern>/deleteStudent.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>stuRegisterPage</servlet-name>
        <servlet-class>com.chen.controller.StuRegisterPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>stuRegisterPage</servlet-name>
        <url-pattern>/stuRegisterPage.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>stuRegister</servlet-name>
        <servlet-class>com.chen.controller.StuRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>stuRegister</servlet-name>
        <url-pattern>/stuRegister.action</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MyEncodingFilter</filter-name>
        <filter-class>com.chen.filter.MyEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyEncodingFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
</web-app>